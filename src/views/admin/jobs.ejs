<%- include("../partials/head") %>
<%- include("../partials/nav") %>
<main class="container">
  <section class="page-header">
    <div>
      <h2>Manage Jobs</h2>
      <p>Post new roles and manage applicants.</p>
    </div>
    <a class="btn" href="/admin/jobs/new">Add Job</a>
  </section>
  <%- include("../partials/flash") %>
  <section class="card">
    <% if (!jobs.length) { %>
      <p>No jobs posted yet.</p>
    <% } else { %>
      <table class="table">
        <thead>
          <tr>
            <th>Role</th>
            <th>Company</th>
            <th>Location</th>
            <th>Posted</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% jobs.forEach((job) => { %>
            <tr>
              <td><%= job.title %></td>
              <td><%= job.company %></td>
              <td><%= job.location %></td>
              <td><%= new Date(job.created_at).toLocaleDateString() %></td>
              <td class="table__actions">
                <a class="btn btn--ghost" href="/admin/jobs/<%= job.id %>/applicants">Applicants</a>
                <form method="post" action="/admin/jobs/<%= job.id %>/delete">
                  <button class="btn btn--danger" type="submit">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </section>
</main>
<%- include("../partials/footer") %>
